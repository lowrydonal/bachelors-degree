<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_advertiser_profile"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.lowry.lapspace3.ProfileLapActivity">

    <!-- Main part of profile contents -->
    <include
        layout="@layout/profile_lap_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!-- Navigation drawer contents -->
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_drawer"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_lap_profile"
        app:headerLayout="@layout/nav_header_lap"/>

</android.support.v4.widget.DrawerLayout>
